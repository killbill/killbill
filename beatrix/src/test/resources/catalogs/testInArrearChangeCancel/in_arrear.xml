<catalog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="CatalogSchema.xsd ">

    <effectiveDate>2019-01-01T00:00:00+00:00</effectiveDate>
    <catalogName>Services</catalogName>

    <recurringBillingMode>IN_ARREAR</recurringBillingMode>

    <currencies>
        <currency>USD</currency>
    </currencies>

    <units>
        <unit name="bullets"/>
    </units>

    <products>
        <product name="PremiumSupport">
            <category>BASE</category>
 			<available>
                <addonProduct>PremiumSupportAddOn</addonProduct>
				<addonProduct>PremiumSupportAddOn2</addonProduct>
            </available>            
        </product>
        <product name="PremiumSupportAddOn">
            <category>ADD_ON</category>
        </product> 
        <product name="PremiumSupportAddOn2">
            <category>ADD_ON</category>
        </product>   		
    </products>

    <rules>
        <changePolicy>
            <changePolicyCase>
                <policy>END_OF_TERM</policy>
            </changePolicyCase>
        </changePolicy>
        <cancelPolicy>
            <cancelPolicyCase>
                <policy>END_OF_TERM</policy>
            </cancelPolicyCase>
        </cancelPolicy>
    </rules>

    <plans>
        <plan name="premium-support-monthly-notrial">
            <product>PremiumSupport</product>
            <finalPhase type="EVERGREEN">
                <duration>
                    <unit>UNLIMITED</unit>
                </duration>
                <recurring>
                    <billingPeriod>MONTHLY</billingPeriod>
                    <recurringPrice>
                        <price>
                            <currency>USD</currency>
                            <value>1000.00</value>
                        </price>
                    </recurringPrice>
                </recurring>
            </finalPhase>
        </plan>
       <plan name="premium-support-addon-monthly-notrial">
            <product>PremiumSupportAddOn</product>
            <finalPhase type="EVERGREEN">
                <duration>
                    <unit>UNLIMITED</unit>
                </duration>
                <recurring>
                    <billingPeriod>MONTHLY</billingPeriod>
                    <recurringPrice>
                        <price>
                            <currency>USD</currency>
                            <value>950.00</value>
                        </price>
                    </recurringPrice>
                </recurring>
            </finalPhase>
       </plan>
       <plan name="premium-support-addon2-monthly-notrial">
            <product>PremiumSupportAddOn2</product>
            <finalPhase type="EVERGREEN">
                <duration>
                    <unit>UNLIMITED</unit>
                </duration>
                <recurring>
                    <billingPeriod>MONTHLY</billingPeriod>
                    <recurringPrice>
                        <price>
                            <currency>USD</currency>
                            <value>300.00</value>
                        </price>
                    </recurringPrice>
                </recurring>
            </finalPhase>
        </plan>
        <plan name="premium-support-addon-monthly-with-usage">
            <product>PremiumSupportAddOn</product>
            <finalPhase type="EVERGREEN">
                <duration>
                    <unit>UNLIMITED</unit>
                </duration>
                <recurring>
                    <billingPeriod>MONTHLY</billingPeriod>
                    <recurringPrice>
                        <price>
                            <currency>USD</currency>
                            <value>900.00</value>
                        </price>
                    </recurringPrice>
                </recurring>
                <usages>
                    <usage name="premium-support-addon-usage" billingMode="IN_ARREAR" usageType="CONSUMABLE">
                        <billingPeriod>MONTHLY</billingPeriod>
                        <tiers>
                            <tier>
                                <blocks>
                                    <tieredBlock>
                                        <unit>bullets</unit>
                                        <size>1</size>
                                        <prices>
                                            <price>
                                                <currency>USD</currency>
                                                <value>1</value>
                                            </price>
                                        </prices>
                                        <max>1000</max>
                                    </tieredBlock>
                                </blocks>
                            </tier>
                        </tiers>
                    </usage>
                </usages>
            </finalPhase>
        </plan>
    </plans>
    <priceLists>
        <defaultPriceList name="DEFAULT">
            <plans>
                <plan>premium-support-monthly-notrial</plan>
                <plan>premium-support-addon-monthly-notrial</plan>
				<plan>premium-support-addon2-monthly-notrial</plan>
                <plan>premium-support-addon-monthly-with-usage</plan>
            </plans>
        </defaultPriceList>
    </priceLists>

</catalog>
